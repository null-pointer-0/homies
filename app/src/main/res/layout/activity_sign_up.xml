<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2C2A2E"
        tools:context=".UI.MainActivity">
    <TextView
            android:text="Sign Up with Phone"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/phonesignup"
            app:layout_constraintTop_toBottomOf="@+id/enterpass" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:textSize="14sp" android:textColor="#F4EEFF" app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="65dp"
            android:textAllCaps="false" android:textStyle="bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/enteruser"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.437"
            android:layout_marginRight="24dp" android:layout_marginLeft="24dp" android:background="@drawable/rounded"
            android:singleLine="true" android:maxLines="1" android:backgroundTint="#837E7E"
            android:textAllCaps="false" android:textColor="#FFFFFF" android:padding="10dp" android:lines="1"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/enteruser"
            android:layout_marginTop="8dp" android:layout_marginRight="24dp" android:layout_marginLeft="24dp"
            android:id="@+id/enterpass" android:background="@drawable/rounded" android:singleLine="true"
            android:maxLines="1" android:inputType="textPassword" android:backgroundTint="#837E7E"
            android:textColor="#FFFFFF" android:padding="10dp" android:lines="1"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/editname"
            app:layout_constraintBottom_toTopOf="@+id/enteruser" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="24dp" android:layout_marginStart="24dp"
            app:layout_constraintHorizontal_bias="1.0" android:background="@drawable/rounded"
            android:singleLine="true" android:textAlignment="textStart" android:maxLines="1"
            android:backgroundTint="#837E7E" android:textColor="#FFFFFF" android:padding="10dp" android:lines="1"/>
    <ImageView
            android:layout_width="197dp"
            android:layout_height="180dp" app:srcCompat="@drawable/logo" android:id="@+id/logoimage"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/editname"/>
    <Button
            android:text="Sign Up!"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/signupbt"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterpass" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.411"
            android:layout_marginTop="36dp" android:textSize="18sp" android:background="#54515C"
            android:layout_marginBottom="190dp" android:textColor="#DFCDFB"/>
    <TextView
            android:text="Already have an account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/alreadytext"
            app:layout_constraintTop_toBottomOf="@+id/enterpass" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/signupbt" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898" app:layout_constraintVertical_bias="0.0"
            android:textSize="16sp" android:textColor="#E7CDF3" android:layout_marginTop="3dp"/>
    <ImageView
            android:layout_width="175dp"
            android:layout_height="40dp" app:srcCompat="@drawable/download" android:id="@+id/githubaccountbt"
            app:layout_constraintTop_toBottomOf="@+id/enterpass"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="0.802" app:layout_constraintStart_toEndOf="@+id/googleaccountbt"
            android:layout_marginBottom="120dp"/>
    <ImageView
            android:layout_width="110dp"
            android:layout_height="40dp" app:srcCompat="@drawable/gmail" android:id="@+id/googleaccountbt"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterpass"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112" android:layout_marginBottom="120dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>