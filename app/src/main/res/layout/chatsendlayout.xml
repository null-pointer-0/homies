<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content" android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="7dp"
            android:layout_alignParentEnd="true"
            android:maxHeight="400dp"
            android:minHeight="30dp"
            android:maxWidth="310dp"
            android:background="@drawable/sender"
            android:layout_marginTop="5dp">
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2"
                app:layout_constraintGuide_end="16dp"
                android:orientation="vertical"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sendmsg"
                app:layout_constraintTop_toTopOf="parent"
                android:minWidth="50dp"
                android:layout_marginTop="8dp"
                android:inputType="textLongMessage|textMultiLine"
                android:textColor="#FDFDFD" app:layout_constraintBottom_toTopOf="@+id/stime"
                app:layout_constraintVertical_bias="0.0"
                android:maxWidth="270dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginRight="5dp"
        />
        <TextView
                android:text="12:00 pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/stime"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintBottom_toBottomOf="parent" android:textColor="#F8F4F4" android:textSize="10sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>