<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2C2A2E"
        tools:context=".Authentication.SignIn">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="email/phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/enteruser"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.406"
            android:layout_marginRight="24dp" android:layout_marginLeft="24dp"
            android:background="@drawable/rounded" android:maxLines="1" android:backgroundTint="#837E7E"
            android:textColor="#FBF2F2" android:padding="10dp" android:inputType="textEmailAddress" android:lines="1"
            android:minLines="1" android:singleLine="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/enteruser"
            android:layout_marginRight="24dp" android:layout_marginLeft="24dp"
            android:id="@+id/enterpass" android:background="@drawable/rounded" android:layout_marginTop="4dp"
            android:inputType="textWebPassword" android:maxLines="1"
            android:backgroundTint="#837E7E" android:textColor="#F6EBEB" android:padding="10dp" android:lines="1"
            android:minLines="1" android:singleLine="true"/>
    <ImageView
            android:layout_width="197dp"
            android:layout_height="180dp" app:srcCompat="@drawable/logo" android:id="@+id/logoimage"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/enteruser" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Sign In!"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/signinbt"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterpass" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.114"
            android:layout_marginTop="36dp" android:textSize="18sp" android:background="#54515C"
            android:layout_marginBottom="190dp" android:textColor="#F1E9E9"/>
    <TextView
            android:text="Click to signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/alreadytext"
            app:layout_constraintTop_toBottomOf="@+id/enterpass" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/signupbt" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.898" app:layout_constraintVertical_bias="0.0"
            android:textSize="16sp" android:textColor="#FDFCFC" android:layout_marginTop="3dp"/>
    <ImageView
            android:layout_width="175dp"
            android:layout_height="40dp" app:srcCompat="@drawable/download" android:id="@+id/githubaccountbt"
            app:layout_constraintTop_toBottomOf="@+id/enterpass"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintHorizontal_bias="0.739" app:layout_constraintStart_toEndOf="@+id/googleaccountbt"
            android:layout_marginBottom="120dp"/>
    <ImageView
            android:layout_width="110dp"
            android:layout_height="40dp" app:srcCompat="@drawable/gmail" android:id="@+id/googleaccountbt"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterpass"
            app:layout_constraintVertical_bias="0.85" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.176" android:layout_marginBottom="120dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>