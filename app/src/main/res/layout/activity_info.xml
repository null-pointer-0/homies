<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2C2A2E"
        tools:context=".UI.Info">
    <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/abc_vector_test"
            android:id="@+id/backarrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginStart="4dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pfp1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#00000000" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:src="@drawable/avatar"
            app:layout_constraintTop_toBottomOf="@+id/backarrow" android:layout_marginTop="10dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/linear_bg" android:id="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/pfp1" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="2dp" android:layout_marginStart="2dp" android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" android:layout_marginTop="60dp" android:id="@+id/linearLayout4">
            <TextView
                    android:text="NAME:"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
                    android:textSize="18sp" android:padding="5dp" android:textAlignment="center"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" android:id="@+id/nameinfo" android:layout_weight="1"
                    android:textSize="18sp" android:padding="5dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp" android:layout_marginTop="15dp" android:id="@+id/linearLayout5">
            <TextView
                    android:text="STATUS:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                    android:textSize="18sp" android:textAlignment="center" android:padding="5dp"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/statusinfo" android:layout_weight="1"
                    android:padding="5dp" android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp" android:layout_marginTop="15dp" android:id="@+id/linearLayout6">
            <TextView
                    android:text="CONTACT:"
                    android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_weight="1"
                    android:textSize="18sp" android:textAlignment="center" android:padding="5dp"
                    android:layout_width="40dp" android:textStyle="bold"/>
            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" android:id="@+id/numberinfo" android:layout_weight="1"
                    android:textSize="18sp" android:padding="5dp" android:text="XXXXXXXXXX"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6" android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp" android:layout_marginStart="30dp">
            <TextView
                    android:text="EMAIL:"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_weight="1"
                    android:textSize="18sp" android:textAlignment="center" android:padding="5dp"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Not provided"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" android:id="@+id/mailinfo" android:layout_weight="1"
                    android:padding="5dp" android:textSize="18sp"/>
        </LinearLayout>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>